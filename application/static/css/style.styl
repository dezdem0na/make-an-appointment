/* Mobile first queries */

alert()
    display: block
    padding: 20px
    border-left: 5px solid

alert-error()
    background-color: #F2D7D5
    border-left-color: #C0392B
    color: #C0392B

alert-success()
    background-color: #D5F5E3
    border-left-color: #2ECC71
    color: #2ECC71

.container
  margin-top 1rem
  min-width 355px

input[type="datetime-local"]
  height: 38px
  padding: 6px 10px
  background-color: #fff
  border: 1px solid #D1D1D1
  border-radius: 4px
  box-shadow: none
  box-sizing: border-box

form
  max-width: 310px

input
select
  width: 100%

p
  margin-bottom: 0

ul.errorlist li
  alert()
  alert-error()

li.success
  alert()
  alert-success()

.required label:after
  content:" *";
  color #ff756b


